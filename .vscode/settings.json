{
  "terminal.integrated.profiles.osx": {
    "zsh-conda-mlx-vlm": {
      "path": "zsh",
      "args": [
        "-c",
        "source $(conda info --base)/etc/profile.d/conda.sh && conda activate mlx-vlm && exec zsh"
      ]
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh-conda-mlx-vlm",
  "python.defaultInterpreterPath": "/opt/homebrew/Caskroom/miniconda/base/envs/mlx-vlm/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "vlm/tests"
  ],
  "mypy.configFile": "vlm/pyproject.toml",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnknownVariableType": "none"
  }
}