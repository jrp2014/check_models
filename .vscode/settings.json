{
  // Point VS Code at the conda environment used for development
  "python.defaultInterpreterPath": "/opt/homebrew/Caskroom/miniconda/base/envs/mlx-vlm/bin/python",

  // Make the `src` package importable for analysis and tests
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src"
  ],

  // Enable pytest discovery for the src folder
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "src"
  ],

  // Use integrated terminal environment for tasks/debug
  "terminal.integrated.env.osx": {
    "CONDA_DEFAULT_ENV": "mlx-vlm",
    "PATH": "/opt/homebrew/Caskroom/miniconda/base/envs/mlx-vlm/bin:${env:PATH}"
  }
}
{
  // Python configuration (project-specific, no hardcoded paths)
  "python.terminal.activateEnvironment": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "src/tests"
  ],
  "mypy.configFile": "src/pyproject.toml",
  
  // Type stub configuration for mlx-vlm
  "python.analysis.stubPath": "src/typings",
  "python.analysis.extraPaths": [
    "src"
  ],
  "python.analysis.exclude": [
    "**/typings/**"
  ],
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnknownVariableType": "none",
    "reportMissingImports": "none",
    "reportMissingModuleSource": "none"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/*.egg-info": true
  }
}