{
  // Make the `src` package importable for analysis and tests
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src"
  ],
  // Enable pytest discovery for the src folder
  "python.testing.pytestEnabled": true,
  // Ruff extension configuration
  "ruff.configuration": "${workspaceFolder}/src/pyproject.toml",
  "ruff.cwd": "${workspaceFolder}/src",
  // Auto-format and code actions on save using ruff (requires ruff extension)
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.fixAll.ruff": "always"
  },
  // Python-specific: use Ruff for formatting and code actions
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // Additional project-level python settings
  "python.terminal.activateEnvironment": true,
  "python.testing.pytestArgs": [
    "src/tests"
  ],
  "mypy.configFile": "src/pyproject.toml",
  "python.analysis.stubPath": "src/typings",
  "python.analysis.exclude": [
    "**/typings/**"
  ],
  "python.analysis.useLibraryCodeForTypes": true,
  // Match pyproject.toml [tool.pyright] typeCheckingMode = "basic"
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnknownVariableType": "none",
    "reportMissingImports": "none",
    "reportMissingModuleSource": "none"
  },
  // Enable Pylance pytest support (fixture completions, parameter inference)
  "python.analysis.enablePytestSupport": true,
  // Exclude build artifacts from file tree, search, and file watcher
  "files.exclude": {
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/*.egg-info": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "typings": true,
    "docs/notes/archive": true,
    "**/.pytest_cache": true
  },
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/node_modules/**": true,
    "typings/**": true
  },
  // Force JSON/JSONC to use the built-in JSON formatter (prevents Copilot being used)
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Prefer the built-in Markdown formatter (prevents Copilot/other extensions taking over)
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  // Prefer a TOML formatter extension; recommend "bungcip.better-toml" in extensions.json
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  }
}