{
  "terminal.integrated.profiles.osx": {
    "zsh-conda-mlx-vlm": {
      "path": "zsh",
      "args": [
        "-c",
        "source $(conda info --base)/etc/profile.d/conda.sh && conda activate mlx-vlm && exec zsh"
      ]
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh-conda-mlx-vlm",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnknownVariableType": "none"
  },
  // Ensure tooling extensions load the correct project configuration
  "ruff.configuration": "${workspaceFolder}/vlm/pyproject.toml",
  "mypy.configFile": "${workspaceFolder}/vlm/pyproject.toml",
  "markdownlint.configPath": "${workspaceFolder}/.markdownlint.json",
  // Keep pytest discovery scoped to the package tests
  "python.testing.pytestArgs": ["vlm/tests"],
  "python.testing.pytestEnabled": true
}